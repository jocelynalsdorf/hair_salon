<h1>Edit this Stylist</h1>

<h1>Update <%=@stylist.name() %> list </h1>

<form action="/lists/<%= @stylist.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename your list:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>