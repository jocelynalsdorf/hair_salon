<h1>Edit this Stylist</h1>

<h3>Reassign clients to a new stylist or remove <%=@stylist.name() %> and his clients: </h3>
<br>
<form action="/stylists/<%= @stylist.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  
  <label for="name">Reassign:</label>
  <input id="name" name="name" type="text" placeholder="new stylists name">

  <button type="submit">Update</button>
</form>

<br>
<br>

<form action="/stylists/<%= @stylist.id() %>" method="post">
  <label for="deleted">Remove stylist and assigned clients: </label>
  <input name="_method" type="hidden" value="delete" id="deleted">

  <button type="submit">Delete stylist</button>
</form>